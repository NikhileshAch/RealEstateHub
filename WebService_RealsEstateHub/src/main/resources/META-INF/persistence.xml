<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="RealEstateHubPU" transaction-type="JTA">
        <jta-data-source>jdbc/RealEstateHubDS</jta-data-source>

        <!-- Entity classes -->
        <class>ch.unil.doplab.webservice_realsestatehub.entity.PropertyEntity</class>
        <class>ch.unil.doplab.webservice_realsestatehub.entity.BuyerEntity</class>
        <class>ch.unil.doplab.webservice_realsestatehub.entity.SellerEntity</class>
        <class>ch.unil.doplab.webservice_realsestatehub.entity.OfferEntity</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- EclipseLink settings (Payara default JPA provider) -->
            <property name="eclipselink.ddl-generation" value="none"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.target-database" value="MySQL"/>
        </properties>
    </persistence-unit>
</persistence>
